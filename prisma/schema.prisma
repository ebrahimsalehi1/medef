// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./obiee.db"
}

generator client {
  provider = "prisma-client-js"
}

model Config {
  id            Int         @default(autoincrement()) @id
  key           String      @unique
  value         String?
  configType    String?    
}

model User {

  id      Int      @default(autoincrement()) @id

  email   String   @unique

  name    String

  displayName    String

}

model Profile {

  id     Int     @default(autoincrement()) @id

  bio    String?

  User   User    @relation(fields: [userId], references: [id])

  userId Int     @unique

}
